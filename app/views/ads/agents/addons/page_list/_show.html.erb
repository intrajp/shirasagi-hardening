<%= code_editor ".mod-ads-pagelist .html", mode: :html, readonly: true %>

<dl class="see mod-ads-pagelist">
  <dt><%= @model.t :link_action %></dt>
  <dd><%= @item.label :link_action %></dd>

  <dt><%= @model.t :link_target %></dt>
  <dd><%= @item.label :link_target %></dd>

  <dt><%= @model.t :sort %></dt>
  <dd><%= @item.label :sort %></dd>

  <dt><%= @model.t :with_category %></dt>
  <dd><%= @item.label :with_category %></dd>

  <dt><%= @model.t :upper_html %></dt>
  <dd>
    <% if @item.upper_html.present? %>
    <%= text_area_tag :upper_html, @item.upper_html, class: "html" %>
    <% end %>
  </dd>

  <dt><%= @model.t :lower_html %></dt>
  <dd>
    <% if @item.lower_html.present? %>
    <%= text_area_tag :lower_html, @item.lower_html, class: "html" %>
    <% end %>
  </dd>
</dl>
