<%= code_editor ".mod-ads-pagelist .html", mode: :html %>

<dl class="see mod-ads-pagelist">
  <dt><%= @model.t :link_action %><%= @model.tt :link_action %></dt>
  <dd><%= f.select :link_action, @item.link_action_options %></dd>

  <dt><%= @model.t :link_target %><%= @model.tt :link_target %></dt>
  <dd><%= f.select :link_target, @item.link_target_options %></dd>

  <dt><%= @model.t :sort %><%= @model.tt :sort %></dt>
  <dd><%= f.select :sort, @item.sort_options, include_blank: " " %></dd>

  <dt><%= @model.t :with_category %><%= @model.tt :with_category %></dt>
  <dd><%= f.select :with_category, @item.with_category_options, include_blank: " " %></dd>

  <dt><%= @model.t :upper_html %><%= @model.tt :upper_html %></dt>
  <dd><%= f.text_area :upper_html, class: :html %></dd>

  <dt><%= @model.t :lower_html %><%= @model.tt :lower_html %></dt>
  <dd><%= f.text_area :lower_html, class: :html %></dd>
</dl>
