<%= render "search" %>

<table class="index">
  <thead>
    <tr>
      <th><%= t("mongoid.attributes.ads/access_log.date") %></th>
      <th><%= t("mongoid.attributes.ads/access_log.link_url") %></th>
      <th><%= t("mongoid.attributes.ads/access_log.count") %></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.date %></td>
      <td><%= item.link_url %></td>
      <td><%= item.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items if @items.try(:current_page) %>
