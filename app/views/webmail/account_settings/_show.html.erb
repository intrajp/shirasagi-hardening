<% default = t('webmail.default_settings') %>

<dl class="see">
  <dt><%= @model.t :imap_host %></dt>
  <dd><%= @item.send(:imap_host).presence || default %></dd>

  <dt><%= @model.t :imap_auth_type %></dt>
  <dd><%= @item.label(:imap_auth_type).presence || default %></dd>

  <dt><%= @model.t :imap_account %></dt>
  <dd><%= @item.send(:imap_account).presence || default %></dd>

  <dt><%= @model.t :imap_password %></dt>
  <dd><%= ('*' * @item.decrypt_imap_password.to_s.size).presence || default %></dd>
</dl>
