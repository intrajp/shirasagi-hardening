<dl class="ezine-form see">
  <dt><%= @model.t :email %></dt>
  <dd><%= f.email_field :email %></dd>

  <dt><%= @model.t :email_type %></dt>
  <dd>
  <% @item.email_type_options.each do |email_type| %>
    <%= f.radio_button :email_type, email_type[1] %><%= email_type[0] %>
  <% end %>
  </dd>

  <dt><%= @model.t :state %></dt>
  <dd>
  <% @item.state_options.each do |state| %>
    <%= f.radio_button :state, state[1] %><%= state[0] %>
  <% end %>
  </dd>
</dl>
