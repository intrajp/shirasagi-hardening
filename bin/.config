#### vars

THIS_USER=""
SELINUX=""

SS_HOSTNAME=${1:-"example.jp"}
SS_USER=${2:-"$USER"}
SS_DIR=/var/www/shirasagi

#### ports

PORT_COMPA=8001
PORT_CHILD=8002
PORT_OPEND=8003

#### logfile

NOW=`date +%Y%m%d%H%M%S`
LOGFILE="shirasagi-hardening_install-log_${NOW}.log"

#### check rpms which is not instlled on the box

RPMS_TO_BE_INSTALLED=()
PACKAGES=("mongodb-org" "gcc" "gcc-c++" "glibc-headers" "openssl-devel" "readline" "libyaml-devel" "readline-devel" "zlib" "zlib-devel" "wget" "git" "ImageMagick" "ImageMagick-devel")
